{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native"
  },
  "ts-node": {
    "files": true
  },
  "resolve": {
    "extensions": [".js", ".jsx", ".json", ".ts"],
    "modules": ["../../node_modules"]
  },
  "resolveLoader": {
    "modules": ["../../node_modules"]
  }
}
