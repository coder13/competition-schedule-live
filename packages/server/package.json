{
  "name": "server",
  "version": "1.0.0",
  "main": "index.ts",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"yarn generate:prisma:watch\" \"yarn generate:graphql:watch\" \"NODE_ENV=development nodemon index.ts\"",
    "start": "NODE_ENV=production ts-node index.ts",
    "lint": "eslint ./",
    "migrate": "prisma migrate",
    "generate:prisma": "prisma generate",
    "generate:prisma:watch": "prisma generate --watch",
    "generate:graphql": "graphql-codegen --config codegen.ts",
    "generate:graphql:watch": "graphql-codegen --config codegen.ts --watch"
  },
  "dependencies": {
    "@apollo/server": "^4.0.1",
    "@graphql-tools/schema": "^9.0.4",
    "@prisma/client": "^4.5.0",
